{
	"compilerOptions": {
		"composite": true,
		"target": "ES2018",
		"lib": ["esnext"],
		"allowJs": true,
		"skipLibCheck": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"noEmit": true,
		"esModuleInterop": true,
		"module": "esnext",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"incremental": true,
		"baseUrl": ".",
		"paths": {
			"~/*": ["src/*"],
			"@graphql/context": ["src/index.ts"],
			"@graphql/*": ["__generated__/graphql/*"]
		},
		"types": ["vitest/globals"]
	},
	"include": [
		"src",
		"types",
		"__generated__",
		"codegen.ts",
		"vitest.config.ts",
		"rollup.config.mjs",
		"rollup.config.dev.mjs",
		".eslintrc.cjs"
	],
	"exclude": ["node_modules"]
}
