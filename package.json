{
	"name": "graphql-sandbox",
	"packageManager": "yarn@3.4.1",
	"scripts": {
		"dev": "rollup -c rollup.config.dev.mjs --watch",
		"prebuild": "rimraf dist && yarn codegen",
		"build": "rollup -c rollup.config.mjs",
		"start": "node dist/index.js",
		"lint": "npm-run-all -s 'lint:*'",
		"lint:eslint": "eslint src",
		"lint:prettier": "prettier --check src",
		"fmt": "npm-run-all -s 'fmt:*'",
		"fmt:eslint": "eslint src --fix",
		"fmt:prettier": "prettier --write src",
		"type-check": "tsc --noEmit",
		"typesync": "typesync",
		"codegen": "graphql-codegen --config codegen.ts"
	},
	"devDependencies": {
		"@graphql-codegen/cli": "3.0.0",
		"@graphql-codegen/typescript": "3.0.0",
		"@graphql-codegen/typescript-resolvers": "3.0.0",
		"@naporin0624/eslint-config": "^0.7.1",
		"@rollup/plugin-alias": "^4.0.3",
		"@rollup/plugin-graphql": "^2.0.3",
		"@rollup/plugin-node-resolve": "^15.0.1",
		"@rollup/plugin-run": "^3.0.1",
		"@types/eslint": "^8.21.1",
		"@types/prettier": "^2.7.2",
		"esbuild": "^0.17.8",
		"eslint": "^8.34.0",
		"npm-run-all": "^4.1.5",
		"prettier": "^2.8.4",
		"rollup": "^3.15.0",
		"rollup-plugin-esbuild": "^5.0.0",
		"typescript": "^4.9.5",
		"typesync": "^0.10.0"
	},
	"dependencies": {
		"@apollo/server": "^4.4.0",
		"graphql": "^16.6.0",
		"log4js": "^6.7.1"
	}
}
